generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum PlanType {
  TRANSFER
  VOCATIONAL
  FOUR_YEAR
}

model Term_tb {
  id       Int        @id @default(autoincrement())
  name     String     @unique
  start    DateTime
  end      DateTime
  Plans_tb Plans_tb[]

  @@map("Term_tb")
}

model Plans_tb {
  id           Int      @id @default(autoincrement())
  subjectCode  String
  subjectName  String
  credit       Int
  lectureHour  Int
  labHour      Int
  termId       Int
  term         Term_tb  @relation(fields: [termId], references: [id], onDelete: Cascade)
  planType     PlanType
  academicYear Int
  yearLevelId  Int
  yearLevel    YearLevel_tb @relation(fields: [yearLevelId], references: [id])

  @@map("Plans_tb")
}

model YearLevel_tb {
  id      Int      @id @default(autoincrement())
  name    String  
  plans   Plans_tb[]

   @@map("YearLevel_tb")
}

model TermYear_tb {
  id       Int    @id @default(1)
  termYear String
  
  @@map("TermYear_tb")
}